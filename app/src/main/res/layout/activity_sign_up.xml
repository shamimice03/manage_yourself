<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appPrimary"
    tools:context="com.example.shamim.manageyourself.SignUpActivity">


    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:visibility="visible"
            android:id="@+id/imageViewNormalSignUp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_ellipse"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:src="@drawable/my_logo_1"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ImageViewFocusSignUp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/my_logo_1"
            android:background="@drawable/ic_ellipse_focus"
            android:layout_height="200dp"
            android:layout_width="200dp"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ImageViewFocusWrongSignUp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@drawable/my_logo"
            android:background="@drawable/ic_ellipse_focus_red"
            android:layout_height="200dp"
            android:layout_width="200dp"
            />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/EditEmailSignUp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="8dp"
        android:hint="Email"
        android:textColor="@color/appSecodnary"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/edit_text_selector"/>


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/EditUsernameSignUp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="8dp"
        android:hint="Username"
        android:textColor="@color/appSecodnary"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/edit_text_selector"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/EditPasswordSignUp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="8dp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/appSecodnary"
        android:background="@drawable/edit_text_selector"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/EditConfirmPasswordSignUp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="8dp"
        android:hint="Confirm Password"
        android:inputType="numberPassword"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/appSecodnary"
        android:background="@drawable/edit_text_selector"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonSignUp"
        android:elevation="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/appSecodnary"
        android:background="@drawable/button_selector"/>

    <TextView

        android:id="@+id/TextViewSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:text="Already have an Account? Sign In"
        android:textColor="@color/appSecodnary" />


</LinearLayout>


